# Colima 설정
Include /Users/nhn/.colima/ssh_config

# Personal GitHub 설정
Host github-personal
    HostName github.com
    User git
    AddKeysToAgent yes
    UseKeychain yes
    IdentityFile ~/.ssh/id_ed25519_personal
    IdentitiesOnly yes

# KBT GitHub 설정 (dotfiles 관리용)
Host github-kbt
    HostName github.com
    User git
    AddKeysToAgent yes
    UseKeychain yes
    IdentityFile ~/.ssh/id_ed25519_github
    IdentitiesOnly yes
